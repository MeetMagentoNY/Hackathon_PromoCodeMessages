<?xml version="1.0"?>
<config>
   <sections>
        <checkout>
            <groups>
                <promocodemessages translate="label" module="hackathon_promocodemessages">
                    <label>Promo Code Error Messages</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <add_additional_info_on_frontend translate="label comment">
                            <label>Add additional info on error messages</label>
                            <comment>This will give customers further information on what exactly has failed with their coupon code.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </add_additional_info_on_frontend>
                        <include_conditions translate="label comment">
                            <label>Validate cart rule conditions</label>
                            <comment>Provides error messaging for conditions under "Conditions" tab</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </include_conditions>
                        <include_actions translate="label comment">
                            <label>Validate cart rule actions</label>
                            <comment>Provides error messaging for actions under "Actions" tab</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </include_actions>
                    </fields>
                </promocodemessages>
            </groups>
        </checkout>
    </sections>
</config>
